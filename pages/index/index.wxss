/**index.wxss**/

.input-example {
  --td-input-vertical-padding: 24rpx;
  background-color: #fff;
  padding: 300rpx 50rpx 40rpx;
}

.input-example__label {
  color: rgba(0, 0, 0, 0.9);
  font-size: 24rpx;
  line-height: 40rpx;
  margin: 0 8rpx 16rpx;
}

.button-example {
  margin: 0 32rpx;
  display: grid;
  grid-template-columns: repeat(1fr, 1fr);
  gap: 32rpx;
}

.button-example:not(:last-child) {
  margin-bottom: 32rpx;
}

.message-example {
  margin: 32rpx;
}

.external-class {
  margin: 0 0 32rpx 0;
}

Page {
  --td-result-title-color: var(--td-font-gray-1, rgba(0, 0, 0, 0.9));
  --td-result-description-color: var(--td-font-gray-2, rgba(0, 0, 0, 0.6));
  --td-footer-text-color: var(--td-font-gray-3, rgba(0, 0, 0, 0.4));
  --td-footer-link-dividing-line-color: var(--td-font-gray-3, rgba(0, 0, 0, 0.4));
  --td-navbar-bg-color: var(--td-font-white-1, #ffffff);
  --td-navbar-color: var(--td-font-gray-1, rgba(0, 0, 0, 0.9));
  --td-footer-link-color: var(--td-primary-color-7, #0052d9);
  --td-button-primary-bg-color: var(--td-primary-color-7, #0052d9);
  --td-button-primary-border-color: var(--td-primary-color-7, #0052d9);
  --td-result-icon-default-color: var(--td-primary-color-7, #0052d9);
  --td-result-icon-success-color: var(--td-success-color-5, #2ba471);
  --td-result-icon-warning-color: var(--td-warning-color-5, #e37318);
  --td-result-icon-error-color: var(--td-error-color-6, #d54941);
}

@media (prefers-color-scheme: dark) {
  page {
    --td-result-title-color: var(--td-font-gray-1, rgba(255, 255, 255, 0.9));
    --td-result-description-color: var(--td-font-gray-2, rgba(255, 255, 255, 0.6));
    --td-footer-text-color: var(--td-font-gray-3, rgba(255, 255, 255, 0.4));
    --td-footer-link-dividing-line-color: var(--td-font-gray-3, rgba(255, 255, 255, 0.4));
    --td-navbar-bg-color: var(--td-font-gray-1, #191919);
    --td-navbar-color: var(--td-font-gray-1, rgba(255, 255, 255, 0.9));
    --td-button-light-disabled-border-color: var(--td-primary-color-1, #1B2F51);
    --td-button-light-disabled-bg: var(--td-primary-color-1, #1B2F51);
    --td-button-primary-disabled-border-color: var(--td-primary-color-1, #143975);
    --td-button-primary-disabled-bg: var(--td-primary-color-1, #143975);
    --td-button-light-bg-color: var(--td-primary-color-1, #1B2F51);
    --td-button-light-border-color: var(--td-primary-color-1, #1B2F51);
    --td-button-primary-disabled-color: var(--td-primary-color-3, rgba(255, 255, 255, 0.2));
    --td-button-light-disabled-color: var(--td-primary-color-3, #143975);
    --td-button-light-active-bg-color: var(--td-primary-color-2, #173463);
    --td-button-light-active-border-color: var(--td-primary-color-2, #173463);
    --td-button-light-active-color: var(--td-primary-color-2, #4582E6);
    --td-button-light-color: var(--td-primary-color-7, #4582E6);
    --td-footer-link-color: var(--td-primary-color-7, #4582E6);
    --td-button-primary-bg-color: var(--td-primary-color-7, #4582E6);
    --td-button-primary-border-color: var(--td-primary-color-7, #4582E6);
    --td-button-primary-active-bg-color: var(--td-primary-color-7, #699EF5);
    --td-button-primary-active-border-color: var(--td-primary-color-7, #699EF5);
    --td-button-primary-color: var(--td-primary-color-7, #FFFFFFE5);
    --td-result-icon-default-color: var(--td-primary-color-7, #4582E6);
    --td-result-icon-success-color: var(--td-success-color-5, #059465);
    --td-result-icon-warning-color: var(--td-warning-color-5, #CF6E2D);
    --td-result-icon-error-color: var(--td-error-color-6, #C64751);
  }
}

